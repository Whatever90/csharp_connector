    </div>
</div>
<div id="mid" style="margin: 50px 25%; width: 350px;">
        <h2>Edit Information</h2>
        <div style="width: 300; height 200">
            <img src="@ViewBag.user.Photo" width="300">
        </div>
        <form action="/editing" method="post">
            <table>
                <tr><td><br></td></tr>
                <tr><td>First Name</td> <td><input type="text" name="fname" value=@ViewBag.user.FirstName></td></tr>
                <tr><td>Last Name</td> <td> <input type="text" name="lname" value=@ViewBag.user.LastName></td></tr>
                <tr><td>Email</td> <td> <input type="text" name="email" value=@ViewBag.user.Email></td></tr>
                <tr><td>Description</td> <td> <input type="text" name="description" value=@ViewBag.user.Description></td></tr>
                <tr><td>Photo URL</td> <td> <input type="text" name="photo" value=@ViewBag.user.Photo></td></tr>
                <tr><td><input type="hidden" name="id" value=@ViewBag.user.UserId></td></tr>
                <tr><td><br></td></tr>
                 <tr><td><input type="submit" value="Save"></td></tr>
                </table>
            </form>
           
            
    </div>
<div style="margin: 50px 25%; width: 350px;">
<h2>Change Password</h2>
        <form action="/passwordupd" method="post">
            <table>
                <tr><td><br></td></tr>
                <tr><td>Password</td> <td> <input type="password" name="Password"></td></tr>
                <tr><td>Password Confirmation</td> <td> <input type="password" name="ConPassword"></td></tr>
                <tr><td><input type="hidden" name="id" value=@ViewBag.user.UserId></td></tr>
                <tr><td><br></td></tr>
                 <tr><td><input type="submit" value="Update Password"></td></tr>
                </table>
            </form>
</div>
    @{ 
        if(ViewBag.errors!=null){
            foreach(var error in ViewBag.errors)
                {
                    if(@error["Errors"].Count > 0)
                        {
                            <p>@error["Errors"][0]["ErrorMessage"]</p>
                        }
                    }
            }
        
    }
</div>