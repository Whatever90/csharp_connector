<div id="mid" style="margin: 50px 25%; width: 5500px;">
        <div>
            <h2>Manage Users</h2>
            <a href="/users/new">Add new user</a>
        </div>
        <table>
            <tr><th>ID</th><th>Name</th><th>email</th><th>Register At</th><th>User Level</th><th>Action</th></tr>
            <tr><td><br></td><td><br></td><td><br></td><td><br></td><td><br></td></tr>
            @{
                foreach(var x in ViewBag.AllU){
                    <tr><td style="backgound-color:azure;">@x.UserId</td> <td><a href="/users/show/@x.UserId" style="text-decoration:none;">@x.FirstName @x.LastName</a></td><td style="backgound-color:azure;">@x.Email</td><td>@x.CreatedAt.ToString("MMM dd yyyy")</td><td>@x.Level</td><td style="backgound-color:azure;"><a href="/users/edit/@x.UserId" style="text-decoration:none;">edit</a> or <a href="/delete/@x.UserId" style="text-decoration:none;">delete</a></td></tr>
                }
                
            }
            
        </table>
        
            
    </div>
</div>
